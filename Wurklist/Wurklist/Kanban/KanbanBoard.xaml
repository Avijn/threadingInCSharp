<Page
    x:Class="Wurklist.Kanban.KanbanBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wurklist.Kanban"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="ToDo" Grid.Column="0" Grid.Row="0" BorderBrush="White" BorderThickness="2">
            <StackPanel x:Name="ToDoText" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="ToDo" FontSize="50"></TextBlock>
                <StackPanel x:Name="ToDoBlock" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <Button x:Name="firsttodo" Grid.Column="0" Grid.Row="0" Width="400" Height="150" Margin="25" Foreground="Black">
                        
                    </Button>
                    <Button x:Name="secondtodo" Grid.Column="0" Grid.Row="0" Width="400" Height="150" Margin="25" Foreground="Black">

                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="Doing" Grid.Column="1" Grid.Row="0" BorderBrush="White" BorderThickness="2">
            <StackPanel x:Name="DoingText" HorizontalAlignment="Center">
                <TextBlock Text="Doing" FontSize="50"></TextBlock>
                <StackPanel x:Name="DoingBlock" HorizontalAlignment="Center">
                    <Button x:Name="firstDoing" Width="400" Height="150" Margin="25" Foreground="Black">

                    </Button>
                    <Button x:Name="secondDoing" Width="400" Height="150" Margin="25" Foreground="Black">

                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="Done" Grid.Column="2" Grid.Row="0" BorderBrush="White" BorderThickness="2">
            <StackPanel x:Name="DoneText" HorizontalAlignment="Center">
                <TextBlock Text="Done" FontSize="50"></TextBlock>
                <StackPanel x:Name="DoneBlock" HorizontalAlignment="Center">
                    <Button x:Name="firstDone" Width="400" Height="150" Margin="25" Foreground="Black">

                    </Button>
                    <Button x:Name="secondDone" Width="400" Height="150" Margin="25" Foreground="Black">

                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

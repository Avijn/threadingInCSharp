<Page
    x:Class="Wurklist.Kanban.KanbanBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wurklist.Kanban"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="ToDo" Grid.Column="0" Grid.Row="0" BorderBrush="White" BorderThickness="10">
            <StackPanel x:Name="ToDoBlock" HorizontalAlignment="Center">
                <Button x:Name="firsttodo" Grid.Column="0" Grid.Row="0" Text="Hallo" FontSize="128" Foreground="Black">
                    
                </Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="Doing" Grid.Column="1" Grid.Row="0" BorderBrush="White" BorderThickness="10">

        </Grid>
        <Grid x:Name="Done" Grid.Column="2" Grid.Row="0" BorderBrush="White" BorderThickness="10">

        </Grid>
    </Grid>
</Page>
